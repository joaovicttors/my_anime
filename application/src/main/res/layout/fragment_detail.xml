<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="anime"
            type="com.joaovicttors.domain.entities.Anime" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/banner_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    bind:imageUrl="@{anime.coverImage}"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{anime.title}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twenty_value"
                    android:layout_marginStart="@dimen/sixteen_size"
                    android:layout_marginTop="@dimen/four_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/banner_image" />

                <TextView
                    android:id="@+id/format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{anime.format.name()}"
                    android:textColor="@color/teal_200"
                    android:textSize="@dimen/fourteen_value"
                    android:layout_marginStart="@dimen/sixteen_size"
                    android:layout_marginTop="@dimen/four_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <RatingBar
                    android:id="@+id/rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="@color/white"
                    android:secondaryProgressTint="@color/white"
                    android:stepSize="0.1"
                    android:rating="@{anime.scoreFormatted}"
                    android:layout_marginStart="@dimen/sixteen_size"
                    android:layout_marginTop="@dimen/twenty_four_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/format"/>

                <TextView
                    android:id="@+id/average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    bind:floatText="@{anime.scoreFormatted}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fourteen_value"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/four_size"
                    android:layout_marginTop="@dimen/twenty_four_size"
                    app:layout_constraintStart_toEndOf="@id/rating_bar"
                    app:layout_constraintTop_toBottomOf="@id/format" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{anime.description}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_value"
                    android:layout_marginEnd="@dimen/sixteen_size"
                    android:layout_marginStart="@dimen/sixteen_size"
                    android:layout_marginTop="@dimen/sixteen_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/average" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>